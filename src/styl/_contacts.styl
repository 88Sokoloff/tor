.contacts
	position relative
	height calc(100vh - 27.4rem)
	background url(../img/bg_contacts.jpg) 50% 0% no-repeat
	background-size 100% 30rem
	&::before
		content: ''
		position absolute
		top 26rem
		left 0
		width 100%
		height 8rem
		background linear-gradient(to top, rgba(224,145,254,.1), rgba(126,49,192,.1))
	.wrap
		position relative
		display flex
		justify-content center
		align-items flex-end
		height 100%
	&_bl
		width 45rem
		margin 0 2.5rem 3rem
		padding 3rem
		background-color #fff
		box-shadow 0 0 5px 0 #ccc
		&_title
			margin 0 2rem 3rem
			font 2.8rem $font_medium
			color $blue
			text-transform uppercase
		&_subtitle
			margin 2rem
			font 1.8rem $font_medium
			color $font_color
		&_tel
			display inline-flex
			align-items flex-end
			margin .5rem 2rem
			font-size 2.8rem
			color $red_bg
			span
				font 2.3rem	$font_book
				color $blue
			&:nth-child(3) .contacts_bl_ico::after
				background-position 0 -4.4rem
		&_ico
			position relative
			width 2.5rem
			height 3rem
			margin-right 1rem
			background-color $blue
			border-radius 12px 0 12px 0
			transform skewX(-12deg)
			&_highlighted
				background-color $red_bg
			&::after
				content ''
				position absolute
				top .1rem
				left .5rem
				width 1.7rem
				height 1.8rem
				background url(../img/contacts_sprite.png) no-repeat
				background-size 9.8rem auto
				background-position -4rem -4.4rem
				transform skewX(12deg)
		&_email
			display inline-flex
			align-items flex-end
			margin .5rem 2rem
			font-size 1.5rem
			color $red_bg
			.contacts_bl_ico::after,
			.contacts_bl_ico_highlighted::after
				left .3rem
				width 2rem
				background-position -7.8rem -4.4rem
		&_highlighted
			padding 1rem 2rem
			border 1px solid $red_bg
			border-radius 3px
		&_txt
			font-family $font_medium
			color #02294c
		&_soc
			display flex
			&_ico
				position relative
				width 2.5rem
				height 3rem
				margin-right 1rem
				border 1px solid #425796
				background-color #425796
				border-radius 12px 0 12px 0
				transform skewX(-12deg)
				transition all .3s ease
				&:hover
					background-color transparent
				&::after
					content ''
					position absolute
					top .1rem
					left .5rem
					width 1.7rem
					height 1.8rem
					background url(../img/ico_soc_sprite.png) no-repeat
					background-size 7.8rem auto
					background-position 0 0
					transform skewX(12deg)
				&.fb:hover::after
					background-position 0 -3rem
				&.vk
					border-color #48658c
					background-color #48658c
					&::after
						background-position -2.3rem 0
					&:hover::after
						background-position -2.3rem -3rem
				&.google
					border-color #b2504b
					background-color #b2504b
					&::after
						background-position -5.5rem 0
					&:hover::after
						background-position -5.5rem -3rem