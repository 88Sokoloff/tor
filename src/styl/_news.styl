.news
	position relative
	background url(../img/bg_promo.jpg) 50% 0% no-repeat
	background-size 100% 20rem
	&::before
		content: ''
		position absolute
		top 16rem
		left 0
		width 100%
		height 8rem
		background linear-gradient(to top, rgba(224,145,254,.1), rgba(126,49,192,.1))
	.wrap
		position relative
		display grid
		grid-template-columns 1fr 1fr 1fr 1fr
		grid-template-rows 12rem 38rem 1fr
		grid-gap 3rem
	&_title
		{page_title}
		grid-column 1 / span 4
	&_main
		grid-column 1 / span 4
		display flex
		background-color #fff
		box-shadow 0 0 5px 0 #ccc
		&_pic
			width 50%
			height 100%
			object-fit cover
		&_desc
			position relative
			padding 2rem 3rem
		&_date
			{bl_date}
		&_title
			{main_bl_title}
		&_txt
			{main_bl_txt}
		&_lk
			{lk_btn}
			&:hover
				{lk_btn_h}
	&_slider
		grid-column 1 / span 3
		position relative
		padding .5rem .5rem 10rem
		overflow hidden
		.new
			height 19rem
			position relative
			display flex
			background-color #fff
			border-radius 3px
			box-shadow 0 0 5px 0 #ccc
			transition all .3s ease
			&:hover
				box-shadow 0 0 10px 0 #666
			&_img
				display inline-block
				width 27%
				height 100%
				object-fit cover
			&_desc
				padding 2rem
			&_date
				{bl_date}
			&_title
				font-size 1.8rem
				color $red_bg
				text-transform uppercase
			&_txt
				margin 1rem 0
				color #555
				text-transform uppercase
			&_details
				position absolute
				bottom 2rem
				right 1rem
				font 1.3rem $font_medium
				color #0f1160
				text-transform uppercase
				&:hover
					text-decoration underline
		.swiper
			&-button-prev,
			&-button-next
				top auto
				bottom 4.5rem
				width 2rem
				height 2rem
			&-button-prev
				left 18rem
			&-button-next
				right 18rem
			&-pagination
				left 0
				right 0
				width 50rem
				margin 3rem auto
				.swiper-pagination-bullet
					margin .2rem
					width 2.5rem
					height 3rem
					background transparent
					border-radius 3px
					font-size 2rem
					transition all .5s ease
					&-active
						background $red_bg
						color #fff
